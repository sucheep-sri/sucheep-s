<!DOCTYPE html>
<html>
  <head>
    <title>{{ title }}</title>
  </head>
  <body>
	<form method=POST action=/users/{{email}} enctype=application/x-www-form-urlencoded>
    <span>Email     : </span><input type=text name=email value={{email}}><br>
		<span>Firstname : </span><input type=text name=firstname value={{firstname}}><br>
		<span>Lastname  : </span><input type=text name=lastname value={{lastname}}><br>
		<span>Phone     : </span><input type=text name=phone value={{phone}}><br>

    <input type=hidden name=_method value=PATCH>
    <input type=submit name=submit value=submit>
	</form>
  </body>
</html>
